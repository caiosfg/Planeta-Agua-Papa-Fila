<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".Views.MainActivity"
    android:background="@drawable/planetaagua">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/senha"
        android:textColor="@color/text_black"
        android:textStyle="bold"
        android:textSize="21sp"
        android:background="@color/colorLight"
      />

    <EditText
        android:id="@+id/codFila"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/digite_o_numero_para_impressao" />

    <Button
        android:id="@+id/impsenha"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorLight"
        android:background="@color/colorPrimaryDark"
        android:text="@string/imprimir_senha" />

    <TextView
        android:id="@+id/venda"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/text_black"
        android:textSize="21sp"
        android:text="@string/venda"
        android:background="@color/colorLight"/>

    <Button
        android:id="@+id/btnPrintImages"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorLight"
        android:background="@color/colorPrimaryDark"
        android:text="@string/print_Images" />

    <TextView

        android:id="@+id/estoque"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="@color/colorLight"
        android:textSize="21sp"
        android:textColor="@color/text_black"
        android:text="@string/estoque" />

    <Button
        android:id="@+id/btnPiarUnpair"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLight"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:text="@string/piar_unpair" />

    <Button
        android:layout_marginTop="300dp"
        android:id="@+id/btnestoque"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLight"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:text="Confere Estoque" />
    <TextView
        android:id="@+id/txtDay"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="@color/colorLight"
        android:textSize="21sp"
        android:textColor="@color/text_black"
        android:text="" />
</LinearLayout>